<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Your Upcoming Concerts</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="center">
    <h1>Your Upcoming Concerts</h1>
    <a href="/logout" class="small-link">Log out</a>
    <% if (Object.keys(eventsByArtist).length === 0) { %>
      <p>No concerts found for your top artists.</p>
    <% } else { %>
      <% for (let artist in eventsByArtist) { %>
        <h2><%= artist %></h2>
        <% let events = eventsByArtist[artist]; %>
        <% if (!events.length) { %>
          <p>— No upcoming events —</p>
        <% } else { %>
          <ul>
            <% events.forEach(e => { %>
              <li>
                <strong><%= new Date(e.datetime).toLocaleDateString() %></strong>
                at <%= e.venue.name %>, <%= e.venue.city %>, <%= e.venue.country %>
              </li>
            <% }) %>
          </ul>
        <% } %>
      <% } %>
    <% } %>
  </div>
</body>
</html>
